{
  "name": "proyecto-imhorsa",
  "version": "1.0.0",
  "description": "Proyecto IMHORSA con Express, TypeScript y MySQL",
  "main": "dist/app.js",
  "scripts": {
    "clean": "rm -rf dist public/js",
    "build": "tsc",
    "build:client": "tsc -p tsconfig.client.json",
    "build:all": "npm run build && npm run build:client",
    "dev": "ts-node-dev --respawn --transpile-only src/app.ts",
    "start": "node dist/app.js"
  },
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "mysql2": "^3.9.2",
    "nodemailer": "^7.0.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/nodemailer": "^7.0.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
